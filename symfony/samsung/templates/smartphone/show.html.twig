{% extends 'base.html.twig' %}

{% block title %}Smartphone{% endblock %}

{% block body %}
    <h1>Smartphone</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ smartphone.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ smartphone.name }}</td>
            </tr>
